<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login</h2>
            <span>Login for existing user</span>
        </div>
        <% if (locals.logout) { %>
            <div class="alter alert-success text-center">
                <%= logout %> 
            </div>
         <% }%>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="username" class="form-control" placeholder="username" name="username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password"> 
            </div>
            <button class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>

<%- include('footer') -%>
